{
  "name": "codebase-digest",
  "version": "1.0.1",
  "description": "A high-performance utility for transforming codebases into structured text digests",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "codebase-digest": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.js",
    "build": "rimraf dist && babel src -d dist --copy-files",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "prepublishOnly": "npm run test && npm run lint && npm run build",
    "postpublish": "git add . && git commit -m \"chore: postpublish updates\" && git push && git tag v$npm_package_version && git push origin v$npm_package_version",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "clean": "rimraf dist coverage .digest-cache",
    "docs": "jsdoc -c jsdoc.json",
    "release": "standard-version",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BankkRoll/codebase-digest.git"
  },
  "keywords": [
    "codebase",
    "digest",
    "llm",
    "documentation",
    "code-analysis",
    "static-analysis"
  ],
  "author": "BankkRoll",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BankkRoll/codebase-digest/issues"
  },
  "homepage": "https://github.com/BankkRoll/codebase-digest#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "ignore": "^5.3.1",
    "mime-types": "^2.1.35",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0"
  },
  "engines": {
    "node": ">=14.16.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
