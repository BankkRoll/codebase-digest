{
  "name": "codebase-digest",
  "version": "1.0.9",
  "description": "A highly configurable tool to turn any codebase into a simple text digest for LLM consumption",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "codebase-digest": "src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "format": "prettier --write {src,tests}/**/*.{js,ts,jsx,tsx}",
    "prepublishOnly": "npm run format",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "code",
    "digest",
    "llm",
    "ai",
    "codebase",
    "ingest",
    "documentation",
    "analysis"
  ],
  "author": "BankkRoll <https://github.com/BankkRoll>",
  "license": "MIT",
  "engines": {
    "node": ">=14.16"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chardet": "^2.0.0",
    "codebase-digest": "^1.0.1",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "iconv-lite": "^0.6.3",
    "ignore": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "vitest": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BankkRoll/codebase-digest.git"
  },
  "bugs": {
    "url": "https://github.com/BankkRoll/codebase-digest/issues"
  },
  "homepage": "https://github.com/BankkRoll/codebase-digest#readme"
}
